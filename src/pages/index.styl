@import '../stylus/mixins'
@import '../stylus/vars'

.header
    left 0
    z-index 10
    width 100%
    margin-bottom 20px
    // transform: translateY(calc(50% - 85px)) //85px = 65px (logo size) + 20px (margin-bottom)

    &__link
        flexCenterCenter()
        
        &-img
            min-width 65px
            min-height 54px
        
        &-text
            color mainWhite
            font-size: 30px
            line-height 24px
            font-weight 100
            margin-left 15px
            font-family: OpenSans, sans-serif

            &--bold
                font-weight 600

.intro
    position relative
    min-height: 100vh
    background: linear-gradient(to right, rgba(0,0,0,.3), rgba(0,0,0,.3)), url('../assets/intro.jpg') no-repeat
    background-size: cover

    .container
        height 100vh
    
    &__text
        text-shadow: 0 0 30px rgba(0, 0, 0, 0.5)
        font-size: 28px
        font-weight 300
        color mainWhite
        text-align center
        margin-bottom 20px
    
    &__btn
        flexCenterCenter()
        width 70px
        height 70px
        margin 0 auto
        border-radius 50%
        background-color: rgba(255, 255, 255, 0.3)
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.25)
        outline: none
        position relative
        uiTrns()
        -webkit-tap-highlight-color: transparent

        &:hover, :active
            cursor pointer
            border-radius: 50%
            background-color: rgba(255, 255, 255, 0.2)
            -webkit-tap-highlight-color: transparent
            
            &:after
                width 20px
                height 20px
                top calc(50% - 3px)
            
            &:before
                background-color: rgba(255, 255, 255, 0.4)
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.4)

        &:before
            content: ''
            display block
            border-radius: 50%
            width 50px
            height 50px
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.25)
            background-color: rgba(255, 255, 255, 0.3)
            uiTrns()
        
        &:after
            content: ''
            display block
            position: absolute
            top 50%
            left 50%
            transform: translate(-50%, -5px)
            width 15px
            height 15px
            background-image: url('../assets/arrow.svg')
            background-repeat: no-repeat
            background-size: cover
            uiTrns()



// start serivce block
//////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////
.service
    background-color: mainWhite

    .container
        padding-top 30px
        padding-bottom 250px

    &__title
        margin-bottom 40px

.service__list-item
    position relative
    display flex
    flex-direction: column
    margin-bottom 40px
    
    &:before
        pseudo()
        margin 0 auto 20px
    
    &:nth-of-type(1):before
        width 51px
        height 60px
        background-image url('../assets/service__1.svg')

    &:nth-of-type(2):before
        width 52px
        height 57px
        background-image url('../assets/service__2.svg')

        
    &:nth-of-type(3):before
        width 55px
        height 55px
        background-image url('../assets/service__3.svg')
        

.service__list-item--title
    text-align center
    color: #2d2d2d
    font-family: "Open Sans"
    font-size: 25px
    font-weight: 300
    line-height: 30px
    margin-bottom 20px

.service__list-item--text
    text-align center
    color: #2d2d2d
    font-family: "Open Sans"
    font-size: 16px
    font-weight: 300
    letter-spacing: 0.32px
    line-height: 26px


// start booking block
//////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////

.booking
    position relative

    .container
        padding-bottom: 50px

.booking__img
    position: absolute
    top 0
    left 50%
    transform: translate(-50%, calc(-100% + 50px))
    min-height: 260px
    width calc(100% - 30px)
    object-fit: cover

    @media screen and (min-width tablet)
        margin-right: 30px

.booking__title
    margin 80px 0 15px
    
.booking__text
    text-align center
    color: #ffffff
    OpenSansLight()
    font-size: 16px
    font-weight: 300
    letter-spacing: 0.24px
    line-height: 26px
    margin-bottom: 30px

.booking__btn
    flexCenterCenter()
    min-width: 160px
    min-height: 40px
    border-radius: 100px
    background-color: #c49b1d
    color: #ffffff
    font-family: "Open Sans"
    font-size: 12px
    font-weight: 700
    letter-spacing: 1.2px
    line-height: 24px
    text-transform: uppercase

.about
    .container
        padding-top: 20px

.about__list
    flexCenterCenter()
    flex-wrap: wrap
    font-family: OpenSans, sans-serif

    &-item
        display flex
        justify-content center
        align-items center
        flex-direction: column
        max-width: calc(50% - 30px)
        margin-bottom: 40px
        position relative
        
        &:nth-child(odd)
            margin-right: 30px
        
        &:before
            pseudo()
            max-width 60px
            min-width: 50px
            min-height: 50px
            max-height: 60px
            padding-bottom: 20px
            background-size: contain
            background-position: center center
            background-repeat: no-repeat

.about__list-item
    &:nth-of-type(1):before
        background-image: url('../assets/icon-highlight-2.svg')
    
    &:nth-of-type(2):before
        background-image: url('../assets/icon-highlight-1.svg')

    &:nth-of-type(3):before
        background-image: url('../assets/icon-highlight-6.svg')

    &:nth-of-type(4):before
        background-image: url('../assets/icon-highlight-5.svg')
    
    &:nth-of-type(5):before
        background-image: url('../assets/icon-highlight-3.svg')
    
    &:nth-of-type(6):before
        background-image: url('../assets/icon-highlight-4.svg')
    
.about__list-item--text
    text-align center
    color uiBlack
    font-size: 16px
    font-weight: 300
    letter-spacing: -0.16px
    line-height: 26px
    font-family 'OpenSans', sans-serif

.about__title
    margin-bottom 20px

.about__video
    margin-bottom: 50px
    min-height: 164px
    width 100%

.about__client
    padding: 0 15px
    display flex
    flex-wrap: wrap
    justify-content: space-between

    &-item
        flexCenterCenter()
        min-width 40%
        margin-bottom: 50px

        &:last-of-type,
        &:nth-last-child(n+1)
            margin-bottom: 40px

.calendar
    .container
        padding-top 30px
        padding-bottom: 80px
    
    &__title
        margin-bottom 30px

.footer
    position: absolute
    bottom 0
    left 0
    width 100%
    padding 0 15px 25px

    &__text
        text-align center
        color mainWhite
        font-family OpenSansLight, sans-serif
        font-size: 14px
        font-weight: 300
        letter-spacing: -0.14px
        line-height: 25px